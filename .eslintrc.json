{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 4, {
            "SwitchCase": 1,
            "ignoreComments": true
            }],
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "no-trailing-spaces": ["error", { "skipBlankLines": false }],
        "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 0 }],
        "react/prop-types": 0
    }
}